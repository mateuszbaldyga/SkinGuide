<!-- SHOW -->
<div class="ui comments panel panel-default panel-body" >
  <div id="commentsWrapper">
  <h3>Opinie klientów</h3>
  <% comments.forEach(function(comment) { %>
    <div class="comment">
      <a href="#" class="avatar">
        <img alt="User's avatar." src="<%= comment.author.avatar %>">
      </a>
      <div class="content">
        <a href="#" class="author">
          <%= comment.author.username %>
        </a>
          <div status='data-notFormated' class="metadata date" style="display: none;"><%= comment.date %></div>
        <div class="dropdown show button-DeleteComment">
          <button class="dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="angle down icon"></i>
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" href="#">Edytuj</a><br>
            <a class="dropdown-item" href="#">Usuń</a>
          </div>
        </div>
        <div class='starsRated'>
          <% for(var i=0; i<comment.rating; i++){ %>
            <span>&#9733;</span>
            <% } %>
        </div>
        <div class="text"><%= comment.text %></div>
      </div>
    </div>
    <hr>
    <% }) %>
  </div>


  <!-- New   -->
    <div class="space">
      <div id="button-addOpinion" class="ui primary submit labeled icon button">
        <i class="icon edit"></i> Dodaj Opinię
      </div><br>
    </div>
    <div id='showForm' style="display: none;">
      <% if(currentUser){ %>
        <form name="formA" id="formA" class="ui reply form" action="/skinguide" method="POST">
          Ocena:
          <div class='rate'>
            <span value='1'>&#9734;</span><span value='2'>&#9734;</span><span value='3'>&#9734;</span><span value='4'>&#9734;</span><span value='5'>&#9734;</span>
          </div>
          <input type="hidden" name="rateValue" id='rateNum'/>
          <input type="hidden" name="currentuser"  id="currentuser" value='<%= currentUser.username %>'/>
          <input type="hidden" name="avatar"  id="avatar" value='<%= currentUser.avatar %>'/>
          <div class="field">
            <textarea id='text' name="text" placeholder="Czy jesteś zadowolona z naszych usług?"></textarea>
          </div>
          <div id="button-sendOpinion" class="ui primary submit labeled icon button">
            <i class="icon edit"></i> Wyślij Opinię
          </div>
        </form>
      <% } else { %>
        <p class="space"><b>Aby dodać opinię, <a href="/login" >zaloguj się</a>.</b></p>
      <% } %>
    </div>
</div>
</main>

<div class="ui comments">
  <h3 class="ui  header">Opinie klientów</h3>
  <div class="commentsContainer">
    <% comments.forEach(function(comment){ %>
    <div class="comment">
      <a class="avatar">
        <img src="/images/default-avatar.jpg"> <!-- trzeba bedzie zmienic -->
      </a>
      <div class="content">
        <a class="author"><%= comment.author %></a>
        <div class="metadata">
          <span status ='notFormated' class="date" style="display: none;"><%= comment.date %></span>
        </div>
        <div class='rate rated rate-active'>
        <% for(var i=0; i<comment.rating; i++){ %>
          <span>&#x2605</span>
        <% } %>
        </div>
        <div class="text">
          <%= comment.text %>
        </div>
  <!--       <div class="actions">
          <a class="reply">Reply</a>
        </div> -->
      </div>
    </div>
    <hr>
    <% }) %>
  </div>


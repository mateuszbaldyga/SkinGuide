<div class="comments-wrapper__comment">
  <div href="#" class="comment__avatar">
    <img alt="User's avatar." src="
    <% if(typeof comment != 'undefined'){ %>
      <%= comment.author.avatar %>
    <% } %>
    ">
  </div>
  <div class="comment__content">
    <div class='content__rate'>
      <% if(typeof comment != 'undefined'){ %>
          <%- '&#9733;'.repeat(comment.rating) %> 
      <% } %>
    </div>
    <div class="content__author">
      <% if(typeof comment != 'undefined'){ %>
        <%= comment.author.username %>
      <% } %>
    </div>
    <span class="content__date">
      <% if(typeof comment != 'undefined'){ %>
        <%= comment.date %>
      <% } %>
    </span>           
    <div class="content__text"><% if(typeof comment != 'undefined'){ %><%= comment.text %><% } %></div>
  </div>
  <% if((typeof comment === 'undefined') || (currentUser && comment.author.id.equals(currentUser._id))){ %>
    <div class="content__dropdown-wrapper">
      <button class="dropdown-wrapper__button">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 400" width="16" height="16" class="button__dropdown-svg">
          <polygon points="0,0 200,200 400,0 "/>
        </svg>
      </button>
      <div class="dropdown-wrapper__menu" data="<% if(typeof comment != 'undefined'){ %><%=comment._id %><% } %>">
        <button type="button" class="menu__button button-EditComment">
          Edytuj
        </button>
        <button type="button" class="menu__button button-DeleteComment">
          Usu≈Ñ
        </button>
      </div>
    </div>
  <% } %>
</div>
<div class="comment">
  <a href="#" class="avatar">
    <img alt="User's avatar." src="
    <% if(typeof comment != 'undefined'){ %>
      <%= comment.author.avatar %>
    <% } %>
    ">
  </a>
  <div class="content dropdown-hover">
  <div class='starsRated'>
      <% if(typeof comment != 'undefined'){ %>
          <%- '&#9733;'.repeat(comment.rating) %> 
      <% } %>
    </div>
    <a href="#" class="author">
      <% if(typeof comment != 'undefined'){ %>
        <%= comment.author.username %>
      <% } %>
    </a>
    <span class="date">
      <% if(typeof comment != 'undefined'){ %>
        <%= comment.date %>
      <% } %>
    </span>           
    <% if((typeof comment === 'undefined') || (currentUser && comment.author.id.equals(currentUser._id))){ %>
      <div class="dropdown">
        <button class="dropdown-toggle">
          <i class="glyphicon icon-down"></i>
        </button>
        <div class="dropdown-menu" data="
            <% if(typeof comment != 'undefined'){ %>
              <%=comment._id %>
            <% } %>">
          <button type="button" class="dropdown-item button-EditComment" href="#">
            Edytuj
          </button>
          <button type="button" class="dropdown-item button-DeleteComment" href="#">
            Usu≈Ñ
          </button>
        </div>
      </div>
    <% } %>
    
    <div class="text">
      <% if(typeof comment != 'undefined'){ %>
        <%= comment.text %>
      <% } %>    
    </div>
  </div>
</div>
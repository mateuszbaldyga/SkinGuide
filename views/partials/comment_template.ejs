<div class="comments-wrapper__comment">
  <a href="#" class="comment__avatar">
    <img alt="User's avatar." src="
    <% if(typeof comment != 'undefined'){ %>
      <%= comment.author.avatar %>
    <% } %>
    ">
  </a>
  <div class="comment__content">
    <div class='content__rate'>
      <% if(typeof comment != 'undefined'){ %>
          <%- '&#9733;'.repeat(comment.rating) %> 
      <% } %>
    </div>
    <a href="#" class="content__author">
      <% if(typeof comment != 'undefined'){ %>
        <%= comment.author.username %>
      <% } %>
    </a>
    <span class="content__date">
      <% if(typeof comment != 'undefined'){ %>
        <%= comment.date %>
      <% } %>
    </span>           
    <% if((typeof comment === 'undefined') || (currentUser && comment.author.id.equals(currentUser._id))){ %>
      <div class="content__dropdown-wrapper">
        <button class="dropdown-wrapper__button">
          <i class="glyphicon icon-down"></i>
        </button>
        <div class="dropdown-wrapper__menu" data="
            <% if(typeof comment != 'undefined'){ %>
              <%=comment._id %>
            <% } %>">
          <button type="button" class="menu__button button-EditComment" href="#">
            Edytuj
          </button>
          <button type="button" class="menu__button button-DeleteComment" href="#">
            Usu≈Ñ
          </button>
        </div>
      </div>
    <% } %>
    
    <div class="content__text">
      <% if(typeof comment != 'undefined'){ %>
        <%= comment.text %>
      <% } %>    
    </div>
  </div>
</div>